<!DOCTYPE html>
<html>
  <head>
    <title><%= t('participations.new.title') %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'admin', 'data-turbo-track': 'reload' %>
    <%= javascript_importmap_tags %>
  </head>

<body>
    <div>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
          <%= link_to admin_root_path, class: 'navbar-brand mb-0 h1' do %>
            <%= image_tag 'klarschiff.png' %>
            <%= Settings::Client.name %>
          <% end %>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto">
              <% if Current.user.present? -%>
                <li class="nav-item">
                  <%= link_to Participation.model_name.human(count: 2), admin_participations_path, class: 'nav-link' %>
                </li>
                <% if Current.user.role_admin? -%>
                  <li class="nav-item">
                    <%= link_to User.model_name.human(count: 2), admin_users_path, class: 'nav-link' %>
                  </li>
                  <li class="nav-item">
                    <%= link_to LogEntry.model_name.human(count: 2), admin_log_entries_path, class: 'nav-link' %>
                  </li>
                <% end -%>
              <% end -%>
            </ul>
            <% unless Rails.env.production? -%>
              <span class="h4 flex-grow-1 text-center mb-1">
                <span class="badge bg-warning text-uppercase"><%= Rails.env %></span>
              </span>
            <% end -%>
            <% if Current.user.present? -%>
              <ul class="navbar-nav">
                <li class="nav-item dropdown">
                  <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><%= Current.user.name %></a>
                  <ul class="dropdown-menu dropdown-menu-right">
                    <li>
                      <%= link_to admin_logins_path, class: 'dropdown-item', data: { turbo_method: :delete } do %>
                        <i class="fa fa-sign-out"></i> <%= t('actions.logout') %>
                      <% end -%>
                    </li>
                  </ul>
                </li>
              </ul>
            <% end -%>
          </div>
        </div>
      </nav>

      <div id="main-content" class="container">
        <%= yield %>
      </div>
      <footer class="footer">
        <div class="container">
          <%= yield :footer %>
        </div>
      </footer>
    </div>
  </body>
</html>
