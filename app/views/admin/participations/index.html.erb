<div class="container">
  <h1><%= Participation.model_name.human(count: 2) %></h1>

  <%= paginate @participations %>

  <table class="table">
    <thead>
      <tr>
        <% %i[id partner_number status authority_name authority_address authority_email contact_name contact_email
              contact_phone created_at].each do |col| -%>
          <th scope="col"><%= Participation.human_attribute_name col %></th>
        <% end -%>
        <th scope="col" class="actions"><%= t('actions') %></th>
      </tr>
    </thead>
    <tbody>
      <% @participations.each do |entry| -%>
        <tr>
          <th scope="row"><%= entry.id %></th>
          <td><%= entry.partner_number %></td>
          <td><%= Participation.human_enum_name :status, entry.status %></td>
          <% %i[authority_name authority_address authority_email contact_name contact_email contact_phone].each do |col| -%>
            <td><%= entry.send(col) %></td>
          <% end -%>
          <td><%= l(entry.created_at) %></td>
          <td class="actions">
            <%= link_to content_tag(:i, '', class: 'fa fa-pencil'), edit_admin_participation_path(entry),
                        class: 'btn btn-sm btn-outline-primary' %>
          </td>
        </tr>
      <% end -%>
    </tbody>
  </table>

  <%= paginate @participations %>
</div>
